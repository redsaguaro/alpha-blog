<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

	<%= form_for(@category, :html =>{role:"form"}) do |f| %>
		<div class="form-group row">
			<div class="col-sm-2 col-form-label">
				<%= f.label :name %>
			</div>
			<div class="col-sm-10">
				<%= f.text_field :name, class:"form-control", placeholder:"Enter category name" , autofocus: true %>
			</div>
		</div>

		<div class="form-group row">
			<div class="offset-sm-2 col-sm-10">
				<%= f.submit class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
	<% end %>
	<div class="col-6 offset-sm-4">
		[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
	</div>
