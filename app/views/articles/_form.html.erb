<%= render 'shared/errors', obj: @article %>

<div class='row'>
	<div class='col-md-10'>
		<%= form_for(@article, :html =>{role:"form"}) do |f| %>
			<div class="form-group row">
				<div class="col-sm-2 col-form-label">
					<%= f.label :title %>
				</div>
				<div class="col-sm-10">
					<%= f.text_field :title, class:"form-control", placeholder:"Title of article" , autofocus: true %>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-2 col-form-label">
					<%= f.label :description %><br/>
				</div>
				<div class="col-sm-10">
					<%= f.text_area :description, rows:10,class:"form-control", placeholder:"Body of the article" %>
				</div>
			</div>


			<div class="form-group row">
				<div class="offset-sm-2 col-sm-10">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>
		<% end %>
		<div class="col-6 offset-sm-4">
			[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
		</div>
	</div>
</div>
